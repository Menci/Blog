{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "noEmit": true,
    "strict": false,
    "strictBindCallApply": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
